# Production Environment Variables for Voyanero Backend

# Supabase Configuration
SUPABASE_URL=https://superbase.voyanero.com
SUPABASE_SERVICE_KEY=your_production_service_key_here
SUPABASE_ANON_KEY=your_production_anon_key_here

# OpenAI Configuration (optional - for AI features)
OPENAI_API_KEY=your_production_openai_api_key_here

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=your_production_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_production_stripe_publishable_key_here

# AWS Configuration (for S3 storage)
AWS_ACCESS_KEY_ID=your_production_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=voyanero-production

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# Application Configuration
ENVIRONMENT=production
DEBUG=False
API_URL=https://api.voyanero.com
FRONTEND_URL=https://voyanero.com

# JWT Configuration
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_min_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Security
ALLOWED_HOSTS=api.voyanero.com,voyanero.com
ALLOWED_ORIGINS=https://app.voyanero.com,https://voyanero.com,http://localhost:3000,http://localhost:5173

# Stripe Webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Logging
LOG_LEVEL=INFO
